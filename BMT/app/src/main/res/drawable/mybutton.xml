<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2b85c6" />
            <gradient android:angle="-90" android:startColor="#8da4ba" android:endColor="#1c65ca"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2b85c6" />
            <solid android:color="#7889a4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0d5dde" />
            <gradient android:angle="-90" android:startColor="#8da4ba" android:endColor="#1c65ca" />
        </shape>
    </item>
</selector>